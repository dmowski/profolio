FROM node:16.13.1 as build
WORKDIR /app
COPY /package.json .
RUN npm install
COPY . .
ARG REACT_APP_KEY_CLOAK_CLIENT_ID
ARG REACT_APP_KEY_CLOAK_REALM_NAME
ARG REACT_APP_KEY_CLOAK_AUTH_SERVER_URL
ARG REACT_APP_KEY_CLOAK_SSL_REQUIRED
ARG REACT_APP_KEY_CLOAK_PUBLIC_CLIENT
ARG REACT_APP_KEY_CLOAK_CONFIDENTIAL_PORT
ARG REACT_APP_BACKEND_BASE_URL

ENV REACT_APP_KEY_CLOAK_CLIENT_ID=$REACT_APP_KEY_CLOAK_CLIENT_ID
ENV REACT_APP_KEY_CLOAK_REALM_NAME=$REACT_APP_KEY_CLOAK_REALM_NAME
ENV REACT_APP_KEY_CLOAK_AUTH_SERVER_URL=$REACT_APP_KEY_CLOAK_AUTH_SERVER_URL
ENV REACT_APP_KEY_CLOAK_SSL_REQUIRED=$REACT_APP_KEY_CLOAK_SSL_REQUIRED
ENV REACT_APP_KEY_CLOAK_PUBLIC_CLIENT=$REACT_APP_KEY_CLOAK_PUBLIC_CLIENT
ENV REACT_APP_KEY_CLOAK_CONFIDENTIAL_PORT=$REACT_APP_KEY_CLOAK_CONFIDENTIAL_PORT
ENV REACT_APP_BACKEND_BASE_URL=$REACT_APP_BACKEND_BASE_URL

RUN npm run build

FROM nginx
COPY --from=build /app/build /usr/share/nginx/html
COPY --from=build /app/nginx/nginx.conf /etc/nginx/conf.d/default.conf